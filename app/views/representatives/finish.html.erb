<h1>Finish</h1>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>University</th>
      <th>Degree level</th>
      <th>Major/Area of Study</th>
      <th>Term of exchange</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.university_id %></td>
        <td><%= student.degree_level %></td>
        <td><%= student.major %></td>
        <td><%= student.exchange_term %></td>
        <td><%= student.student_email %></td>
        <td><%= link_to 'Show', user_show_student_path(student) %></td>
        <td><%= link_to 'Edit', user_edit_student_path(student) %></td>
        <td><%= link_to 'Delete', student, method: :user_destroy %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Enter another new student', user_new_student_path(@representative) %> | 

<h1>Nominator Info</h1>

<p>
  <strong>First name:</strong>
  <%= @representative.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @representative.last_name %>
</p>

<p>
  <strong>Title:</strong>
  <%= @representative.title %>
</p>

<p>
  <strong>Nominator email:</strong>
  <%= @representative.rep_email %>
</p>

<p>
  <strong>University:</strong>
  <%= University.find(@representative.university_id).university_name %>
</p>

<%= link_to 'Edit Nominator Info', user_edit_representative_path(@representative) %> |