<%= form_with model: representative, url: user_update_representative_path(@representative), method: :patch, local: true do |form| %>
  <% if representative.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(representative.errors.count, "error") %> prohibited this nominator from being saved:</h2>

      <ul>
        <% representative.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.hidden_field :university_id %>
  </div>

  <div class="field">
    <%= form.label :first_name %>
