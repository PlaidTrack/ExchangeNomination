  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :rep_email %>
    <%= form.email_field :rep_email %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
