<p id="notice"><%= notice %></p>

<h1>Nominators</h1>
<br>

<%= link_to 'Universities', universities_path %> | 
<%= link_to 'Nominators', nominators_path %> | 
<%= link_to 'Students', students_path %>
<br>
<br>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Title</th>
      <th>University</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nominators.each do |nominator| %>
      <tr>
        <td><%= nominator.first_name %></td>
        <td><%= nominator.last_name %></td>
        <td><%= nominator.title %></td>
        <td><%= University.find(nominator.university_id).university_name %></td>
        <td><%= nominator.nominator_email %></td>
        <td class="actions"><%= link_to("Show", nominator_path(nominator), :class => 'action show') %></td>
        <td><%= link_to 'Edit', edit_nominator_path(nominator) %></td>
        <td><%= link_to 'Delete', nominator, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

