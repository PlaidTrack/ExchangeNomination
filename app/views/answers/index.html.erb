<p id="notice"><%= notice %></p>

<h1>Answers</h1>
<br>
<p>Prompt: <%= @question.prompt %></p>
<br>

<table>
  <thead>
    <tr>
      <th>Choice</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.choice %></td>
        <td><%= link_to 'Edit Choice', edit_question_answer_path(@question, answer) %></td>
        <td><%= link_to 'Destroy Choice', [@question, answer], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer', new_question_answer_path(@question) %> |
<%= link_to 'View This Question', [@question] %> | 
<%= link_to 'To Question Table', questions_path %>
