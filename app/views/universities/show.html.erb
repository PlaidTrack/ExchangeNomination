<p id="notice"><%= notice %></p>

<p>
  <strong>University name:</strong>
  <%= @university.university_name %>
  <br>
  <strong>Number of Nominees:</strong>
  <%= @university.num_nominees %>
</p>

<br>

<p style="font-size:130%;">Student Nominees for this University:</p>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>University</th>
      <th>Degree level</th>
      <th>Major/Area of Study</th>
      <th>Term of exchange</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.university_id %></td>
        <td><%= student.degree_level %></td>
        <td><%= student.major %></td>
        <td><%= student.exchange_term %></td>
        <td><%= student.student_email %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Delete', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add Student', new_student_path %>
