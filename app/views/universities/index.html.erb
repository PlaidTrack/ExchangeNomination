<table>
  <thead>
    <tr>
      <th>University</th>
      <th>Nominees</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @universities.each do |university| %>
      <tr>
        <td><%= university.university_name %></td>
        <td><%= university.num_nominees %></td>
        <td><%= link_to 'Show', university %></td>
        <td><%= link_to 'Edit', edit_university_path(university) %></td>
        <td><%= link_to 'Delete', university, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

