<style media="screen">
  .center {
    margin-left: auto;
    margin-right: auto;
  }
</style>

<header>
  <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #3C0000; padding-top: 0;padding-bottom: 0;">
    <div class = "row" style="height:35px; padding-bottom: 0;">
      <div class="col-sm-auto" style="margin-bottom: 0;">
        <%= button_to "Return to Home Page", user_new_representative_path, :class => "new-navbar-box", :method => :get %>
      </div>
      <div class="col-sm" style="margin-left: auto;">
        <div style="margin-right: auto;">
          <%= button_to 'Back', admin_path, :class => "new-navbar-box", :method => :get %>
        </div>
      </div>
    </div>
  <nav>
</header>

<div style="padding-left: 30px; padding-right: 30px;">
  <p id="notice"><%= notice %></p>

  <% content_for :title, "Universities" %>

  <h1>Universities</h1>

  <hr style="height: 3px; border: 0px solid #696969; border-top-width: 1px;" >

  <br>

  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-sm-auto">
        <%= button_to "Universities", universities_path, :class => "data-button", :method => :get %>
      </div>
      <div class="col-sm-auto">
        <%= button_to 'Representatives', representatives_path, :class => "data-button", :method => :get %>
      </div>
      <div class="col-sm-auto">
        <%= button_to 'Students', students_path, :class => "data-button", :method => :get %>
      </div>
      <div class="col-sm-auto">
        <%= button_to 'Questions', questions_path, :class => "data-button", :method => :get %>
      </div>
    </div>
  </div>

  <br>
  <br>

  <table class="table center" style="width: 50%;">
    <thead class="thread-dark">
      <tr>
        <th scope="col">University</th>
        <th scope="col">Nominees</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @universities.each do |university| %>
        <tr>
          <td scope="row"><%= university.university_name %></td>
          <td>10</td>
          <%# Yeah so uh this doesn't work...%>
          <%# <td><%= university.num_nominees %> <%# </td> %>
          <td><%= button_to "Show", university, :class => "", :method => :get %></td>
          <td><%= button_to "Edit", edit_university_path(university), :class => "", :method => :get %></td>
          <td><%= button_to "Delete", university, :class => "", :method => :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <div style="margin-left: 15%;">
    <%= button_to "New University", new_university_path, :class => "create-new-item-button", :method => :get %>
  </div>
  <br>
  <br>
</div>
