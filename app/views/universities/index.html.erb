<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>
<div style="text-align: right"><%= link_to 'Help', admin_help_path %></div>

<% content_for :title, "Universities" %>

<h1>Universities</h1>
<br>

<%= link_to 'Universities', universities_path %> | 
<%= link_to 'Nominators', representatives_path %> | 
<%= link_to 'Students', students_path %> | 
<%= link_to 'Questions', questions_path %>
<br>
<br>

<table>
  <thead>
    <tr>
      <th>University</th>
      <th>Nominees</th>
      <th>Limit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @universities.each do |university| %>
      <tr>
        <td><%= university.university_name %></td>
        <td><%= university.num_nominees %></td>
        <td><%= university.max_limit %></td>
        <td><%= link_to 'Show', university %></td>
        <td><%= link_to 'Edit', edit_university_path(university) %></td>
        <td><%= link_to 'Delete', delete_university_path(university) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New University', new_university_path %> | 
<%= link_to 'Reset All', reset_all_universities_path %> |
<%= link_to 'Clear All', clear_all_universities_path %>
<br>
<br>

<p>
Default Limit of Nominees: 
<%= @max_lim %>
</p>

<form action="/universities/update_max" method="get" accept-charset="UTF-8" >
  <label for="max_lim">Change default maximum nominee limit: </label>
  <input id="max_lim" name="max_lim" type="number" />
  <input name="commit" type="submit" value="Update Default Limit" />
</form>
<br>

<form action="/universities/change_all_max" method="get" accept-charset="UTF-8" >
  <label for="change_lim">Change the max limit for all universities: </label>
  <input id="change_lim" name="change_lim" type="number" />
  <input name="commit" type="submit" value="Change All Limits" />
</form>

<br>
<br>

<%= link_to 'Back to Admin', admin_path %>
