<p id="notice"><%= notice %></p>

<h1>Admins</h1>

<table>
  <thead>
    <tr>
      <th>Admin emails</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authorizeds.each do |authorized| %>
      <tr>
        <td><%= authorized.authorized_email %></td>
        <td><%= link_to 'Show', authorized %></td>
        <td><%= link_to 'Edit', edit_authorized_path(authorized) %></td>
        <td><%= link_to 'Destroy', authorized, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admin', new_authorized_path %>
